<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_navigation"
    app:startDestination="@id/homeFragment">
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.game_catalogue.view.fragment.HomeFragment"
        android:label="Home" >
        <action
            android:id="@+id/action_homeFragment_to_categoryListFragment"
            app:destination="@id/categoryListFragment" />
        <action
            android:id="@+id/action_homeFragment_to_platformListFragment"
            app:destination="@id/platformListFragment" />
        <action
            android:id="@+id/action_homeFragment_to_gameListFragment"
            app:destination="@id/gameListFragment" />
    </fragment>
    <fragment
        android:id="@+id/gameListFragment"
        android:name="com.example.game_catalogue.view.fragment.GameListFragment"
        android:label="Games" >
    </fragment>
    <fragment
        android:id="@+id/categoryListFragment"
        android:name="com.example.game_catalogue.view.fragment.CategoryListFragment"
        android:label="Categories"
        tools:layout="@layout/fragment_category_list" >
        <action
            android:id="@+id/action_categoryListFragment_to_gameListFragment"
            app:destination="@id/gameListFragment" />
    </fragment>
    <fragment
        android:id="@+id/platformListFragment"
        android:name="com.example.game_catalogue.view.fragment.PlatformListFragment"
        android:label="Categories"
        tools:layout="@layout/fragment_platform_list" >
        <action
            android:id="@+id/action_platformListFragment_to_gameListFragment"
            app:destination="@id/gameListFragment" />
    </fragment>
</navigation>